<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Revert the template switches in Magento 2.4.7 that duplicate most of the template files -->
        <referenceBlock name="sales.order.history">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Magento_Sales::order/history.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
