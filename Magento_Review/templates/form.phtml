            <script>
                function initReviewForm() {

                    return {
                        isLoading: false,
                        displayNickname: false,
                        displaySuccessMessage: false,
                        displayErrorMessage: false,
                        errorMessages: [],
                        errors: 0,
                        hasCaptchaToken: 0,
                        nickname: null,
                        summary: null,
                        ratings: [],
                        review: null,
                        setErrorMessages: function (messages) {
                            this.errorMessages = [messages]
                            this.displayErrorMessage = this.errorMessages.length
                        },
                        submitForm: function () {
                            var $form = document.querySelector('#<?= $escaper->escapeJs($formId) ?>');
                            this.validate();

                            <?= $block->getChildHtml('recaptcha_validation'); ?>

                            if (this.errors === 0) {
                                this.placeReview();
                            }
                        },
                        validate: function () {
                            this.nickname = document.getElementById('nickname_field').value;
                            this.summary = document.getElementById('summary_field').value;
                            this.review = document.getElementById('review_field').value;

                            var ratingValue;
                            <?php foreach ($block->getRatings() as $rating): ?>
                            try {
                                ratingValue =
                                    document
                                        .querySelector('input[name="ratings[<?= (int)$rating->getId() ?>]"]:checked')
                                        .value;
                                this.ratings[<?= $escaper->escapeJs($rating->getId()) ?>] = btoa(ratingValue);
                            } catch (e) {
                                console.log(e);
                            }
                            <?php endforeach; ?>

                            if (!(this.nickname &&
                                this.summary &&
                                this.review &&
                                Object.keys(this.ratings).length === <?= count($block->getRatings()) ?>
                            )) {
                                this.setErrorMessages(
                                    ['<?= $escaper
                                        ->escapeJs(
                                            __('Please verify you\'ve entered all required information')
                                        ) ?>']
                                );
                                this.displayErrorMessage = true;
                                this.errors = 1;
                                this.hasCaptchaToken = 0;
                            }
                        },
                        placeReview: function (itemId, qty) {
                            var $this = this;

                            $this.isLoading = true;
                            $this.displayErrorMessage = false;

                            <?php $createProductReviewQuery = json_encode(
                                '
                                    mutation {
                                        createProductReview(
                                            input: {
                                            sku: "' . $escaper->escapeJs($block->getProductInfo()->getSku()) . '",
                                                nickname: "%nickname",
                                                summary: "%summary",
                                                text: "%review",
                                                ratings: [%ratings]
                                        }
                                    ) {
                                            review {
                                                nickname
                                            }
                                        }
                                    }
                                '
                            ); ?>

                            function escape(s) {
                                return s.replace(/\\/, '\\\\').replace('"', '\\"');
                            }

                            var createProductReviewQuery = <?= /** @noEscape */ $createProductReviewQuery ?>
                                .replace('%nickname', escape($this.nickname))
                                .replace('%summary',  escape($this.summary))
                                .replace('%review',   escape($this.review))
                                .replace('%ratings', Object.keys($this.ratings).map(function (key) {
                                    return '{ id: "' + btoa(key) + '", value_id: "' + escape($this.ratings[key]) + '" }'
                                }).join(','));

                            fetch(`${BASE_URL}graphql`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json;charset=utf-8',
                                    'Store': '<?= $escaper->escapeHtmlAttr($viewModelStore->getStoreCode()) ?>'
                                },
                                credentials: 'include',
                                body: JSON.stringify({query: createProductReviewQuery})
                            })
                                .then(function (response) {
                                    return response.json()
                                })
                                .then(
                                    function (data) {
                                        $this.isLoading = false;
                                        if (data.errors) {
                                            $this.setErrorMessages(['<?= $escaper->escapeJs(__('Submitting your review failed, please try again.')) ?>']);
                                            $this.displayErrorMessage = true;
                                        } else {
                                            $this.displaySuccessMessage = true;
                                        }
                                    }
                                );
                        }
                    }
                }
            </script>
