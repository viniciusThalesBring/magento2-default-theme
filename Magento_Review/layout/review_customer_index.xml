<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Review\Block\Customer\ListCustomer" name="review_customer_list"
                   template="Magento_Review::customer/list.phtml" cacheable="false" ifconfig="catalog/review/active">
                <arguments>
                    <argument name="viewModelCustomerReviews"
                              xsi:type="object">Hyva\Theme\ViewModel\Customer\ReviewList
                    </argument>
                    <argument name="viewModelStoreConfig"
                              xsi:type="object">Hyva\Theme\ViewModel\StoreConfig
                    </argument>
                </arguments>
                <block name="js_localstorage_config" template="Hyva_Theme::js/localStorageConfig.phtml">
                    <arguments>
                        <argument name="render_in_script_tag" xsi:type="boolean">false</argument>
                    </arguments>
                </block>
                <block name="loading" template="Hyva_Theme::ui/loading.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
