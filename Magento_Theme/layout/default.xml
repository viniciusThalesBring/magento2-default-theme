<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block name="head.js" class="Magento\Framework\View\Element\Template" template="Magento_Theme::html/head/js_variables.phtml" />
            <block class="Magento\Framework\View\Element\FormKey" name="formkey" />
        </referenceContainer>
        <referenceContainer name="page.messages">
            <block name="messages" template="Magento_Theme::messages.phtml"/>
        </referenceContainer>
        <referenceContainer name="header.container">
            <block name="header-content" template="Magento_Theme::html/header.phtml">
                <block class="Magento\Theme\Block\Html\Header\Logo" name="logo">
                    <arguments>
                        <argument name="logo_img_width" xsi:type="number">189</argument>
                        <argument name="logo_img_height" xsi:type="number">64</argument>
                    </arguments>
                </block>
                <block name="header-search" template="Magento_Theme::html/header/search-form.phtml"/>
                <block name="cart-drawer" template="Magento_Theme::html/cart/cart-drawer.phtml"/>
<!--                <block name="topmenu_static" as="topmenu" template="Magento_Theme::html/header/topmenu_static.phtml"/>-->
                <block name="topmenu_generic" as="topmenu" template="Magento_Theme::html/header/topmenu.phtml" ttl="3600">
                    <arguments>
                        <argument name="viewModelNavigationAsJson"
                                  xsi:type="object">Hyva\Theme\ViewModel\NavigationAsJson
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
        <referenceContainer name="top.container">
            <block class="Magento\Theme\Block\Html\Breadcrumbs" name="breadcrumbs" as="breadcrumbs"/>
        </referenceContainer>
        <referenceContainer name="columns.top">
            <block class="Magento\Theme\Block\Html\Title" name="page.main.title" template="Magento_Theme::html/title.phtml"/>
        </referenceContainer>
        <referenceContainer name="footer">
            <block name="footer-content" template="Magento_Theme::html/footer.phtml">
                <block class="Magento\Cms\Block\Block" name="footer-cms-content">
                    <arguments>
                        <argument name="block_id" xsi:type="string">footer_content</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="script-alpine-js" template="Magento_Theme::html/footer_scripts/script-alpine-js.phtml"/>
            <block name="script-cookies" template="Magento_Theme::html/footer_scripts/script-cookies.phtml"/>
            <block name="script-private-content" template="Magento_Theme::html/footer_scripts/script-private-content.phtml"/>
        </referenceContainer>
    </body>
</page>
