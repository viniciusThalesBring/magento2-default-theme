use Hyva\Theme\Model\ViewModelRegistry;
use Hyva\Theme\ViewModel\HeroiconsOutline;
use Magento\Framework\Escaper;
use Magento\Theme\Block\Html\Pager;

/** @var Pager $block */
/** @var Escaper $escaper */
/** @var ViewModelRegistry $viewModels */

/** @var HeroiconsOutline $heroicons */
$heroicons = $viewModels->require(HeroiconsOutline::class);

$pagerItemClass = "relative inline-flex items-center text-sm font-medium leading-5 bg-white border border-gray-300";
$pagerItemBtnClass = $pagerItemClass
    . " transition duration-150 ease-in-out"
    . " hover:text-gray-400"
    . " focus:z-10 focus:outline-none focus:border-primary-lighter focus:shadow-outline-blue"
    . " active:bg-gray-100 active:text-gray-500";
?>
<?php if ($block->getCollection()->getSize()): ?>

    <?php if ($block->getUseContainer()): ?>
        <div class="grid items-center grid-flow-row grid-cols-4 gap-2 pager
            sm:grid-cols-8 md:grid-cols-4 lg:grid-cols-8">
    <?php endif ?>

    <?php if ($block->getShowAmounts()): ?>
        <p class="flex order-3 col-span-2 text-sm leading-5 text-gray-700
                toolbar-amount sm:order-2 md:order-3 lg:order-2 gap-x-1">
            <span class="toolbar-number">
            <?php if ($block->getLastPageNum() > 1): ?>
                <?= $escaper->escapeHtml(
                    __('Items %1 to %2 of %3 total', $block->getFirstNum(), $block->getLastNum(), $block->getTotalNum())
                ) ?>
            <?php elseif ($block->getTotalNum() == 1): ?>
                <?= $escaper->escapeHtml(__('%1 Item', $block->getTotalNum())) ?>
            <?php else: ?>
                <?= $escaper->escapeHtml(__('%1 Item(s)', $block->getTotalNum())) ?>
            <?php endif; ?>
            </span>
        </p>
    <?php endif ?>

    <div class="flex justify-center order-2 col-span-4 pages">
        <?php if ($block->getLastPageNum() > 1): ?>
            <strong class="sr-only label pages-label"><?= $escaper->escapeHtml(__('Page')) ?></strong>
            <ol class="relative z-0 inline-flex shadow-sm items pages-items"
                aria-label="<?= $escaper->escapeHtml(__('Page')) ?>"
            >
                <li class="item pages-item-previous">
                    <?php $text = $block->getAnchorTextForPrevious() ? $block->getAnchorTextForPrevious() : ''; ?>
                    <?php if (!$block->isFirstPage()): ?>
                        <a class="<?= $escaper->escapeHtmlAttr($text ? 'link ' : 'action ') ?>
                            <?= $pagerItemBtnClass ?> rounded-l-md px-3 py-2 text-gray-500"
                           href="<?= $escaper->escapeUrl($block->getPreviousPageUrl()) ?>"
                           title="<?= $escaper->escapeHtmlAttr($text ? $text : __('Previous')) ?>">
                            <span class="sr-only label"><?= $escaper->escapeHtml(__('Page')) ?></span>
                            <span>
                            <?php if ($text): ?>
                                <?= $escaper->escapeHtml($text) ?>
                            <?php else: ?>
                                <?= $heroicons->chevronLeftHtml('', 20, 20); ?>
                            <?php endif; ?>
                            </span>
                        </a>
                    <?php else: ?>
                        <strong
                            class="previous <?= $pagerItemClass ?> rounded-l-md px-3 py-2 text-gray-400 border-gray-200"
                            title="<?= $escaper->escapeHtmlAttr($text ? $text : __('Previous')) ?>"
                            aria-disabled="true">
                            <span class="sr-only label"><?= $escaper->escapeHtml(__('Page')) ?></span>
                            <?= $heroicons->chevronLeftHtml('', 20, 20); ?>
                        </strong>
                    <?php endif; ?>
                </li>

                <?php if ($block->canShowFirst()): ?>
                    <li class="item -ml-px">
                        <a class="page first <?= $pagerItemBtnClass ?> px-4 py-2 text-gray-500" href="<?= $escaper->escapeUrl($block->getFirstPageUrl()) ?>">
                            <span class="sr-only label"><?= $escaper->escapeHtml(__('Page')) ?></span>
                            <span>1</span>
                        </a>
                    </li>
                <?php endif; ?>

                <?php if ($block->canShowPreviousJump()): ?>
                    <li class="item -ml-px">
                        <a class="page previous jump <?= $pagerItemBtnClass ?> text-gray-700 px-4 py-2"
                           title=""
                           href="<?= $escaper->escapeUrl($block->getPreviousJumpUrl()) ?>">
                            <span>...</span>
                        </a>
                    </li>
                <?php endif; ?>

                <?php foreach ($block->getFramePages() as $page): ?>
                    <?php if ($block->isPageCurrent($page)): ?>
                        <li class="item -ml-px">
                            <a
                                href="<?= $escaper->escapeUrl($block->getPageUrl($page)) ?>"
                                class="page <?= $pagerItemBtnClass ?> z-10 px-4 py-2 text-gray-700 bg-gray-100 border-primary"
                                aria-current="page">
                                <span class="sr-only label">
                                    <?= $escaper->escapeHtml(
                                        __('You\'re currently reading page')
                                    ) ?>
                                </span>
                                <span><?= $escaper->escapeHtml($page) ?></span>
                            </a>
                        </li>
                    <?php else: ?>
                        <li class="item -ml-px">
                            <a href="<?= $escaper->escapeUrl($block->getPageUrl($page)) ?>"
                                class="page <?= $pagerItemBtnClass ?> px-4 py-2 text-gray-700">
                                <span class="sr-only label"><?= $escaper->escapeHtml(__('Page')) ?></span>
                                <span><?= $escaper->escapeHtml($page) ?></span>
                            </a>
                        </li>
                    <?php endif; ?>
                <?php endforeach; ?>

                <?php if ($block->canShowNextJump()): ?>
                    <li class="item -ml-px">
                        <a class="page next jump <?= $pagerItemBtnClass ?> px-4 py-2 text-gray-700"
                            title=""
                            href="<?= $escaper->escapeUrl($block->getNextJumpUrl()) ?>">
                            <span>...</span>
                        </a>
                    </li>
                <?php endif; ?>

                <?php if ($block->canShowLast()): ?>
                    <li class="item -ml-px text-gray-500">
                        <a class="page last <?= $pagerItemBtnClass ?> px-4 py-2"
                        href="<?= $escaper->escapeUrl($block->getLastPageUrl()) ?>">
                            <span class="sr-only label"><?= $escaper->escapeHtml(__('Page')) ?></span>
                            <span><?= $escaper->escapeHtml($block->getLastPageNum()) ?></span>
                        </a>
                    </li>
                <?php endif; ?>

                <li class="item pages-item-next -ml-px">
                    <?php if (!$block->isLastPage()): ?>
                        <?php $text = $block->getAnchorTextForNext() ? $block->getAnchorTextForNext() : ''; ?>
                        <a class="<?= /* @noEscape */ $text ? 'link ' : 'action ' ?> next
                            <?= $pagerItemBtnClass ?> rounded-r-md px-3 py-2 text-gray-500"
                           href="<?= $escaper->escapeUrl($block->getNextPageUrl()) ?>"
                           title="<?= $escaper->escapeHtmlAttr($text ? $text : __('Next')) ?>">
                            <span class="sr-only label"><?= $escaper->escapeHtml(__('Page')) ?></span>
                            <span>
                            <?php if ($text): ?>
                                <?= $escaper->escapeHtml($text) ?>
                            <?php else: ?>
                                <?= $heroicons->chevronRightHtml('', 20, 20); ?>
                            <?php endif; ?>
                            </span>
                        </a>
                    <?php else: ?>
                        <strong
                            class="next <?= $pagerItemClass ?> rounded-r-md px-3 py-2 text-gray-400 border-gray-200"
                            title="<?= $escaper->escapeHtmlAttr($text ? $text : __('Next')) ?>"
                            aria-disabled="true">
                            <span class="sr-only label"><?= $escaper->escapeHtml(__('Page')) ?></span>
                            <?= $heroicons->chevronRightHtml('', 20, 20); ?>
                        </strong>
                    <?php endif; ?>
                </li>
            </ol>
        <?php endif; ?>
    </div>

    <?php if ($block->isShowPerPage()): ?>
        <div class="flex items-center justify-end order-3 col-span-2 limiter sm:order-2 md:order-3 lg:order-2">
            <label class="mr-2 text-sm label" for="limiter">
                <span><?= $escaper->escapeHtml(__('Show')) ?></span>
            </label>
            <select id="limiter" class="form-select" onchange="location.href = this.value">
                <?php foreach ($block->getAvailableLimit() as $key => $limit): ?>
                    <option value="<?= $escaper->escapeUrl($block->getLimitUrl($key)) ?>"
                        <?php if ($block->isLimitCurrent($key)): ?>
                            selected="selected"<?php endif ?>>
                        <?= $escaper->escapeHtml($limit) ?>
                    </option>
                <?php endforeach; ?>
            </select>
            <span class="sr-only limiter-text"><?= $escaper->escapeHtml(__('per page')) ?></span>
        </div>
    <?php endif ?>

    <?php if ($block->getUseContainer()): ?>
        </div>
    <?php endif ?>

<?php endif ?>
